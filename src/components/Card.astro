---
import Knap from "../components/Knap.astro";
---

<div class="img_container">
  <img src="../public/img/signature.png" alt="" />
  <h3 class="cardh2">Signature ring</h3>
  <p>Lorem, ipsum dolor sit amet malet muiolsok</p>
  <div class="knap">
    <Knap color="white" text="shop" />
  </div>
</div>
<style>
  .cardh2 {
    color: var(--black);
  }
  a {
    text-decoration: none;
  }
  .knap {
    border: 2px solid var(--primarycolor);
    padding: 0.6rem 0rem;
  }
  .img_container {
    overflow: hidden;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .img_container h3,
  p {
    margin: 0.5rem;
  }
  img {
    width: 70%;
    margin-inline: auto;
    object-fit: cover;
    align-self: stretch;
  }
</style>
